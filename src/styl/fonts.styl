  font-family Karla
  src url('../fonts/Karla-BoldItalic.woff') format('woff')
  font-weight: $bold;
  font-style: italic;

@font-face
  font-family Karla
  src url('../fonts/Karla-Italic.woff') format('woff')
  font-weight: $normal;
  font-style: italic;

@font-face
  font-family Karla
  src url('../fonts/Karla-Regular.woff') format('woff')
  font-weight: $normal;
  font-style: normal;

.karla-bold
 font-family 'Karla'
 font-weight $bold
 font-style normal

.karla-bold-italic
