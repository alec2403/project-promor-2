@font-face
  font-family BigCaslon
  src url('../fonts/BigCaslon-Medium.woff') format('woff')
  font-weight: $normal;
  font-style: normal;

@font-face
  font-family Karla
  src url('../fonts/Karla-Bold.woff') format('woff')
  font-weight: $bold;
  font-style: normal;

