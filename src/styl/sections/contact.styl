//   margin-right 6%

.contact-form p
  margin-bottom 20px
  color #777777

::placeholder
    color #c4c4c4



input[type=text], select, textarea
    width 100%
    padding 12px
    border 0px solid #ccc
    border-radius 1px
    background-color #efefef
    margin-top 6px
    margin-bottom 16px

#contact-button
  border none
  border-bottom 2px solid green
  background-color white
  line-height 1.4
  cursor pointer
  -webkit-appearance none

#mail-contact
  color white

.contact-container
  display flex

@media only screen and (max-width: 600px)
  .contact-form
    width 80vw !important

  .contact-content
    height 900px !important
    flex-direction column !important
    align-items center !important

  .contact-container
    flex-direction column !important
    margin-top 70px
