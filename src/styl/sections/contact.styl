.contact-header
  margin-top 80px
  position relative
  background-image url('../img/group.jpg')
  background-size cover
  background-repeat no-repeat
  height 40vh
  display flex
  align-items center
  color white

.header-card
  height 15vh
  width 35vw
  margin-left 10vw
  background-image url('../img/group-18.png')
  background-size cover
  display flex
  flex-direction row
  align-items center
  justify-content center
  box-shadow 0 34px 40px 0 rgba(0, 0, 0, 0.5)
  letter-spacing 1px
  font-size 1.1em

#mail-icon
  margin-right 3vw
  height 1.5vh


.contact-content
  height 600px
  display flex
  flex-direction row
  justify-content space-evenly
  align-items center
  margin-top 50px

.contact-form
  width 40vw
  margin-bottom 90px

// .map
//   margin-top auto
